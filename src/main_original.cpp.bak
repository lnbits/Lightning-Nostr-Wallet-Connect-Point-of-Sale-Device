  // Create queues for WiFi communication
  wifiCommandQueue = xQueueCreate(10, sizeof(wifi_command_t));
  wifiScanResultQueue = xQueueCreate(5, sizeof(wifi_scan_result_t));
  
  // Create WiFi task on Core 0
  xTaskCreatePinnedToCore(
