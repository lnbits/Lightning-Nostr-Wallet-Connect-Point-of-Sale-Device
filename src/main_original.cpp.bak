            if (*screen_to_load == SCREEN_KEYPAD) {
                Serial.println("Returning to keypad screen, checking connections...");
                // Attempt reconnection if needed
                attempt_reconnection_if_needed();
            }
            
            load_screen(*screen_to_load);
